#######################################################################################

mkdir /mnt/storage
mount -t ext4 /dev/sdb1 /mnt/storage

cat << EOF >> /dev/fstab

# /dev/sdb1
UUID=e188c771-5797-41f5-83c2-c0608121b6a5	/mnt/storage	ext4		rw,relatime	0 2

EOF

#######################################################################################

export EDITOR=emacs
visudo

#######################################################################################

useradd -m -G wheel,docker -s /bin/zsh jarres
passwd jarres

#######################################################################################

exit

#######################################################################################

# https://gitlab.com/jrs-linux/dotfiles

#######################################################################################

sudo systemctl enable --now docker 

